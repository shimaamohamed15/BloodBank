<body>

    <!-- ======= Mobile nav toggle button ======= -->
    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

    <!-- ======= Header ======= -->
    @if (User.Identity.IsAuthenticated)
    {
        var user = @userManager.GetUserAsync(User).Result;



<header id="header">
            <div class="d-flex flex-column">
               
                <div class="profile">
                    @if (!string.IsNullOrEmpty(user.Picture))
                    {
                        <img src="~/assets/img/@user.Picture" alt="" class="img-fluid rounded-circle">
                        <h1 class="text-light">@user.UserName</h1>
                    }
                    else
                    {
                        <img src="~/assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle">
                        <h1 class="text-light">@user.UserName</h1>


                    }
                </div>

                <nav id="navbar" class="nav-menu navbar">
                    <ul>
                        @if (userManager.IsInRoleAsync(user, "Admin").Result)
                        {
                            <li><a asp-area="Admin" asp-page="/AdminHome" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                            <li><a asp-area="Admin" asp-page="/Users/Index" class="nav-link scrollto"><i class="bx bx-user"></i> <span>Users</span></a></li>
                            <li><a asp-area="Admin" asp-page="/BloodRequests" class="nav-link scrollto"><i class="bx bx-donate-blood"></i> <span>Blood Requestes</span></a></li>
                            <li><a asp-area="Admin" asp-page="/RequestHistory" class="nav-link scrollto"><i class="bx bx-history"></i> <span>Request History</span></a></li>
                            <li><a asp-area="Admin" asp-page="/Donations" class="nav-link scrollto"><i class="bx bx-donate-blood"></i> <span>Donations</span></a></li>
                            <li><a asp-area="Admin" asp-page="/DonationHistory" class="nav-link scrollto"><i class="bx bx-history"></i> <span>Donation History</span></a></li>
                            <li><a asp-area="Admin" asp-page="/BloodStock" class="nav-link scrollto"><i class="bx bxs-store"></i> <span>Stock</span></a></li>
                            <li><a asp-area="Identity" asp-page="/Account/Logout" class="nav-link scrollto"><i class="bx bx-log-out"></i> <span>Logout</span></a></li>


                        }
                        else
                        {
                            <li><a asp-page="/UserHome" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                            <li><a asp-page="/PersonalInfo" asp-route-id="@user.Id" class="nav-link scrollto"><i class="bx bx-info-circle"></i> <span>Personal Iformation</span></a></li>
                            <li><a asp-page="/RequestBlood" class="nav-link scrollto"><i class="bx bx-donate-blood"></i> <span>Request Blood</span></a></li>
                            <li><a asp-page="/RequestHistory" class="nav-link scrollto"><i class="bx bx-history"></i> <span>Request History</span></a></li>
                            <li><a asp-page="/DonateBlood" class="nav-link scrollto"><i class="bx bx-donate-blood"></i> <span>Donate Blood</span></a></li>
                            <li><a asp-page="/DonationHistory" class="nav-link scrollto"><i class="bx bx-history"></i> <span>Donation History</span></a></li>
                            <li> <a  asp-page = "/ShowStock" class="nav-link scrollto"><i class="bx bxs-store"></i> <span>Show Stock</span></a></li>
                            <li><a asp-page="/Account/Logout" asp-area="Identity" class="nav-link scrollto"><i class="bx bx-log-out-circle"></i> <span>Logout</span></a></li>

                        }


                    </ul>
                </nav><!-- .nav-menu -->
            </div>
        </header>
        }<!-- End Header -->
    <div id="main">
        @RenderBody()
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Blood Bank</span></strong>
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
