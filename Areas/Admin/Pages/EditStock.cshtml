@page
@model BloodBank.Areas.Admin.Pages.EditStockModel

@{
    ViewData["Title"] = "EditStock";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>EditStock</h1>

<h4>BloodStock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BloodStock.Id" />
           
            <div class="form-group">
                <label asp-for="@Model.Quantity" class="control-label"></label>
                <input asp-for="@Model.Quantity" class="form-control" value="@Model.BloodStock.Quantity"/>
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-route-id="@Model.BloodStock.Id" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/BloodStock">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
