@page
@model BloodBank.Areas.Admin.Pages.DonationsModel

@{
    ViewData["Title"] = "Donations";
}

<h1>Donations</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].AppUser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].AppUser.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Disease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].DateOfDonation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Status)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Donation) {
        <tr id="DonationItem">
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td id="DQuantity">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfDonation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td id="DAction">
                <form method="post" asp-page="/Donations">
                    <input id="DApprove" type="submit" class="btn btn-primary" value="Approve"  asp-page-handler="Approve" asp-route-id="@item.Id"/>
                    <input id="DReject" type="submit" class="btn btn-danger"  value="Reject" asp-page-handler="Reject" asp-route-id="@item.Id"/>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
