@page
@model BloodBank.Areas.Admin.Pages.DonationHistoryModel

@{
    ViewData["Title"] = "DonationHistory";
}

<h1>DonationHistory</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].AppUser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].AppUser.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Disease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].DateOfDonation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Status)
            </th>

            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Donation)
        {
            <tr id="DonationItem">
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BloodGroup)
                </td>
                <td id="DQuantity">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfDonation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                
            </tr>
        }
    </tbody>
</table>

